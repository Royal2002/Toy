<%- include('../partials/header') -%>

<div class="col-9">
    <div class="container p-3 w-50">
        <h1 class="text-center mt-5 mb-3">Toy Details</h1>
        
        <form action="/signup" method="POST">

            <div class="form-group px-0">
                <input type="text" name="name" class="form-control" placeholder="Name">
            </div>
    
            <div class="form-group px-0">
                <input type="text" name="email" class="form-control" placeholder="description">
            </div>
    
            <div class="form-group px-0">
                <input type="text" name="password" class="form-control" placeholder="cost">
            </div>
    
            <button type="submit" class="btn btn-danger btn-block">Save</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') -%>